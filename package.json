{
  "name": "gaiden",
  "version": "17.7.0",
  "description": "Styleguide for GetNinjas projects",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "preversion": "npm run build:prod",
    "version": "git reset HEAD~1 --soft",
    "postversion": "git push --tags",
    "config": "npm config set progress=false && npm config set git-tag-version=true && npm link",
    "clear": "rm -rf ./build/*",
    "build:prod": "npm run build:prod:html && npm run build:prod:image && npm run build:prod:css",
    "build:dev": "npm run build:dev:html && npm run build:dev:image && npm run build:dev:css",
    "watch:css": "onchange \"src/scss\" -- npm run build:dev:css",
    "watch:css:prod": "onchange \"src/scss\" -- npm run build:prod:css",
    "watch:html": "onchange \"src/html\" -- npm run build:dev:html",
    "watch:image": "onchange \"src/images\" -- npm run build:dev:image",
    "watch:build": "onchange \"build/stylesheets\"",
    "watch": "npm-run-all -p watch:css watch:html watch:image watch:build",
    "browsersync": "browser-sync start --config .browser-sync.js",
    "start": "npm run clear && FORCE_COLOR=1 npm-run-all -p build:dev browsersync watch",
    "build:dev:css": "./bin/build/dev/css.js",
    "build:dev:html": "./bin/build/dev/html.js",
    "build:dev:image": "./bin/build/dev/image.js",
    "build:prod:css": "./bin/build/prod/css.js",
    "build:prod:html": "./bin/build/prod/html.js",
    "build:prod:image": "./bin/build/prod/image.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 2%"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getninjas/gaiden.git"
  },
  "keywords": [
    "styleguide",
    "css"
  ],
  "author": "GetNinjas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/getninjas/gaiden/issues"
  },
  "homepage": "https://github.com/getninjas/gaiden#readme",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.4",
    "@storybook/html": "^5.2.6",
    "@storybook/preset-scss": "^1.0.2",
    "autoprefixer": "^6.7.7",
    "babel-loader": "^8.0.6",
    "babel-preset-latest": "^6.24.1",
    "css-loader": "^3.2.0",
    "css-mqpacker": "^5.0.1",
    "cssnano-cli": "^1.0.5",
    "node-sass": "^4.13.0",
    "reset-css": "^2.2.0",
    "sass-lint": "^1.10.2",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0"
  },
  "dependencies": {
    "@getninjas/niten-tokens": "^1.3.0"
  }
}
